<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
	<insert id="insert" parameterType="categoryvo">
		<![CDATA[
			insert into category values (null, #{name}, #{description}, #{blogId})
		]]>
	</insert>
	
	<select id="findTitles" parameterType="string" resultType="categoryvo">
		<![CDATA[
			select id,
				   name,
				   description,
				   blog_id as blogId
		      from category
		     where blog_id=#{blogId}
		  order by id desc
		]]>
	</select>
	
	<select id="findContents" parameterType="string" resultType="categoryvo">
		<![CDATA[
			   select a.id,
	      			  a.name,
	      			  a.description,
	      			  count(b.id) as cnt	      			  
	 		     from category a 
		    left join post b
       			   on a.id = b.category_id
       			where a.blog_id=#{id}
       		 group by a.id
 			 order by a.id desc
		]]>
	</select>
	
	<select id="findDefaultId" resultType="long">
		<![CDATA[
			select ifnull(min(id), 0) from category
		]]>
	</select>
	
	<select id="findById" parameterType="long" resultType="categoryvo">
		<![CDATA[
			select id,
				   name,
				   description,
				   blog_id as blogId
		      from category
		     where id=#{id}
		]]>
	</select>
	
	<select id="findBlogId" parameterType="long" resultType="string">
		<![CDATA[
			select blog_id as blogId
		      from category
		     where id=#{categoryId}
		]]>
	</select>
	
	<delete id = "deleteById" parameterType="long">
		<![CDATA[
			delete from category
			 where id=#{id}
	  	]]>
	</delete>
</mapper>